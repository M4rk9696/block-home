{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@tivac/svelte/svelte"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins" : [
        "html",
        "@tivac/svelte"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
